<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>


<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fundamentos.proyecto.controller.EditarPerfilController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #2D2E32;">

    <!-- Título -->
    <Label layoutX="30.0" layoutY="30.0" text="Editar Perfil">
        <font>
            <Font name="System Bold" size="28.0"/>
        </font>
        <textFill>
            <LinearGradient endX="1.0" endY="1.0">
                <stops>
                    <Stop color="#f170ff"/>
                    <Stop color="#daf71b" offset="1.0"/>
                </stops>
            </LinearGradient>
        </textFill>
    </Label>

    <!-- Formulario -->
    <VBox layoutX="100.0" layoutY="100.0" spacing="20.0" prefWidth="600.0">
        <children>

            <!-- Nombre -->
            <HBox spacing="15.0">
                <Label text="Nombre:" prefWidth="100.0">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#f170ff"/>
                                <Stop color="#daf71b" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
                <TextField fx:id="nombreField" promptText="Juan Pérez" />
            </HBox>

            <!-- Correo -->
            <HBox spacing="15.0">
                <Label text="Correo:" prefWidth="100.0">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#f170ff"/>
                                <Stop color="#daf71b" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
                <TextField fx:id="correoField" promptText="juan.perez@email.com" />
            </HBox>

            <!-- Teléfono -->
            <HBox spacing="15.0">
                <Label text="Teléfono:" prefWidth="100.0">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#f170ff"/>
                                <Stop color="#daf71b" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
                <TextField fx:id="telefonoField" promptText="+57 312 345 6789" />
            </HBox>

            <!-- Ubicación -->
            <HBox spacing="15.0">
                <Label text="Ubicación:" prefWidth="100.0">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#f170ff"/>
                                <Stop color="#daf71b" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
                <TextField fx:id="ubicacionField" promptText="Medellín, Colombia" />
            </HBox>

            <!-- Botones -->
            <HBox spacing="20.0" alignment="CENTER">
                <Button text="Guardar Cambios" prefWidth="150" style="-fx-background-color: #363432;">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#f170ff"/>
                                <Stop color="#daf71b" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Button>

                <Button text="Cancelar" prefWidth="100" style="-fx-background-color: #363432;">
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#f170ff"/>
                                <Stop color="#daf71b" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Button>
            </HBox>

        </children>
    </VBox>
</AnchorPane>
